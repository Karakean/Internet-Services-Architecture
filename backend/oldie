FROM maven:3.8.6-openjdk-18-slim AS build
COPY src /home/app/family/src
COPY pom.xml /home/app/family
RUN mvn -f /home/app/family/pom.xml clean package

FROM openjdk:20-ea-27-jdk-slim-bullseye
COPY --from=build /home/app/family/target/isa-0.0.1-SNAPSHOT.jar /usr/local/lib/family.jar
EXPOSE 8081
ENTRYPOINT ["java","-jar","/usr/local/lib/family.jar"]